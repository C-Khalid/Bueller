          <%= image_tag s.imageurl.to_s+".jpg" , :width => 100, :height => 100 %>
        <% end %>
      </td>
    </tr>
    </table>



<h1>Absent </h1>
<% Student.absent( @date ).each do |s| %>
  <div style="margin-top: 50px; margin-left: 3px; 
                  font-family: Arial Black; font-size: 15px;">
        Name: <%= s.name %> </br>
        Nickname: <%= s.nickname %> </br> 
        Email: <%= s.email %> </br>
        <%= image_tag s.imageurl.to_s+".jpg" , :width => 100, :height => 100 %>
      
       </br></br></br>
  </div>
<% end %>
