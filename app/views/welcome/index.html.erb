

<%= form_tag "/", method: "get" do %>
  <p>Date: <input value = "<%= @date %>" name = "date" type="text" id="datepicker"></p>
  <input type="submit" value="Submit"> 
<% end %>
  
<h1>Present </h1>
    <table border = 1 style="margin: auto; width = 100%; background-color: #F8F8F8  " >
    <tr>
      <td height="500" width="500"> 
        <% Student.in_seat(1, @date ).each do |s| %>
          Nickname: <%= s.nickname %> </br> 
          <%= image_tag s.imageurl.to_s+".jpg" , :width => 100, :height => 100 %>
        <% end %>
      </td>
  
      <td height="500" width="500"> 
        <% Student.in_seat(2,  @date ).each do |s| %>
          Nickname: <%= s.nickname %> </br> 
          <%= image_tag s.imageurl.to_s+".jpg" , :width => 100, :height => 100 %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td height="500" width="500"> 
        <% Student.in_seat(3,  @date ).each do |s| %>
          Nickname: <%= s.nickname %> </br> 
          <%= image_tag s.imageurl.to_s+".jpg" , :width => 100, :height => 100 %>
        <% end %>
      </td>
      <td height="500" width="500"> 
        <% Student.in_seat(4,  @date ).each do |s| %>
